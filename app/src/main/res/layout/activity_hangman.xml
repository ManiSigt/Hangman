<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manisigurdsson.hangman.Hangman">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="241dp"
            android:layout_margin="5dp"
            android:contentDescription="hangmanPic"
            app:srcCompat="@drawable/hangman1" />

        <TextView
            android:id="@+id/hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="hidden"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="word"
                android:textSize="24sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hintClick"
                android:text="@string/hint"
                tools:layout_editor_absoluteX="231dp"
                tools:layout_editor_absoluteY="364dp" />

            <EditText
                android:id="@+id/keyboard_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:inputType="textCapCharacters"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:contentDescription="ruby"
                app:srcCompat="@drawable/ruby" />

            <TextView
                android:id="@+id/rubieid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="num"
                android:textSize="24sp" />
        </LinearLayout>


        <com.example.manisigurdsson.hangman.MyKeyboard
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:orientation="vertical" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>














