<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bakgrunnur3"
    tools:context="com.example.manisigurdsson.hangman.DifficultySettings">

    <Button
        android:id="@+id/easyid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="easyClick"
        android:text="@string/easy"
        style="@style/buttons"/>

    <Button
        android:id="@+id/mediumid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="mediumClick"
        android:text="@string/medium"
        style="@style/buttons"/>

    <Button
        android:id="@+id/hardid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="hardClick"
        android:text="@string/hard"
        style="@style/buttons"/>
</LinearLayout>
